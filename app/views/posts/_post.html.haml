- if post.is_hidden? && (can? :trigger_visibility, post)
  .postPreview
    .image
      = link_to image_tag(post.picture.url(:preview), :class => "rc4"), post
    .text
      .header
        %h2.post-hidden
          = link_to post.title, post
        %span.data
          = I18n.l post.created_at.to_date
      .description
        = truncate(post.conversation, :length => 80, :separator => ' ').markdown.typography.html_safe
- elsif !post.is_hidden?
  .postPreview
    .image
      = link_to image_tag(post.picture.url(:preview), :class => "rc4"), post
    .text
      .header
        %h2
          = link_to post.title, post
        %span.data
          = I18n.l post.created_at.to_date
      .description
        = truncate(post.conversation, :length => 80, :separator => ' ').markdown.typography.html_safe
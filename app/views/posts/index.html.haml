%table
  %tr
    %th Title
    %th Body
    %th
    %th
    %th
- @posts.each do |post|
  %tr
    %td= link_to post.title, post
    %td= post.conversation
    - if can? :update, Post
      %td= link_to 'Edit', edit_post_path(post)
    - if can? :destroy, @post
      %td= link_to 'Destroy', post, :confirm => 'Вы уверены?', :method => :delete
- title "Все песни из параграфов пользователя #{@user.username}"

.columns
	.column.column-x2
		= render '/shared/sidebar'

	.column.column-x4
		.posts
			.header
				%h3 
					Все песни из параграфов пользователя
					%strong
						= @user.username
			%ul.songs-list
				- @posts.each do |post|
					%li{:class => cycle("odd", "even")}
						= post.song_code.html_safe
						%span
							= link_to post.title.titleize, post
							%br/
							= I18n.l post.created_at.to_date